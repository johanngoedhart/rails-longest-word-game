<h1>New game</h1>
<h4> <%= @letters %></h4>

<form action="/score" >
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <div class="form-inline">
    <div class="form-group">
      <input type="text" class="form-control" name="word" placeholder="e.g. Coding">
      <input class="btn btn-primary" type="submit" value="Get score">
    </div>
  </div>
</form>


